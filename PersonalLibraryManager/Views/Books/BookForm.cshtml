@model PersonalLibraryManager.Models.BookFormViewModel

@{
    ViewBag.Title = Model.Heading;
    var action = Model.Id == 0 ? "Create" : "Edit";
   
}

<h2>@Model.Heading</h2>

@using (Html.BeginForm(action, "Books", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.Id)

        <div class="form-group">
            @Html.LabelFor(m => m.Title, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Author, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Author, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Author, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ISBN, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.ISBN, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ISBN, "", new { @class = "text-danger" })
                <p class="help-block">Optional - Enter the ISBN number if available</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Status, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Status,
                    new SelectList(Enum.GetValues(typeof(PersonalLibraryManager.Models.ReadingStatus))),
                    "Select Status",
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Rating, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Rating,
                    new SelectList(new[] {
                        new { Value = "", Text = "Not Rated" },
                        new { Value = "1", Text = "⭐ 1 Star" },
                        new { Value = "2", Text = "⭐⭐ 2 Stars" },
                        new { Value = "3", Text = "⭐⭐⭐ 3 Stars" },
                        new { Value = "4", Text = "⭐⭐⭐⭐ 4 Stars" },
                        new { Value = "5", Text = "⭐⭐⭐⭐⭐ 5 Stars" }
                    }, "Value", "Text"),
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Rating, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DateCompleted, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.DateCompleted, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(m => m.DateCompleted, "", new { @class = "text-danger" })
                <p class="help-block">Optional - Only for completed books</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Review, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Review, new { @class = "form-control", rows = "5" })
                @Html.ValidationMessageFor(m => m.Review, "", new { @class = "text-danger" })
                <p class="help-block">Optional - Write your personal thoughts about this book</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-floppy-disk"></span> Save
                </button>
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/book-form-validation.js"></script>
}