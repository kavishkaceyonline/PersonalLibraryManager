@model IEnumerable<PersonalLibraryManager.Models.Book>
@{
    ViewBag.Title = "Index";
}

<h2>
    <span class="glyphicon glyphicon-book"></span> My Library
</h2>

<p>
    @Html.ActionLink("Add New Book", "Create", null, new { @class = "btn btn-primary" })
</p>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Status</th>
                    <th>Rating</th>
                    <th>Date Added</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                        <td>
                            @switch (book.Status)
                            {
                                case PersonalLibraryManager.Models.ReadingStatus.ToRead:
                                    <span class="label label-info">To Read</span>
                                    break;
                                case PersonalLibraryManager.Models.ReadingStatus.Reading:
                                    <span class="label label-warning">Reading</span>
                                    break;
                                case PersonalLibraryManager.Models.ReadingStatus.Completed:
                                    <span class="label label-success">Completed</span>
                                    break;
                            }
                        </td>
                        <td>
                            @if (book.Rating.HasValue)
                            {
                                for (int i = 0; i < book.Rating.Value; i++)
                                {
                                    <span class="glyphicon glyphicon-star" style="color: gold;"></span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Not rated</span>
                            }
                        </td>
                        <td>@book.DateAdded.ToString("MMM dd, yyyy")</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = book.Id }, new { @class = "btn btn-sm btn-default" })
                            @Html.ActionLink("Details", "Details", new { id = book.Id }, new { @class = "btn btn-sm btn-info" })
                            @Html.ActionLink("Delete", "Delete", new { id = book.Id }, new { @class = "btn btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>Your library is empty!</h4>
        <p>Start building your personal library by adding your first book.</p>
        <p>@Html.ActionLink("Add Your First Book", "Create", null, new { @class = "btn btn-primary" })</p>
    </div>
}

